<?xml version="1.0" encoding="UTF-8"?>
<htd:humanInteractions xmlns:htd="http://www.example.org/WS-HT"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xsd="http://www.w3.org/2001/XMLSchema"
    xmlns:tns="http://www.insurance.example.com/claims/"
    targetNamespace="http://www.insurance.example.com/claims/"
    xsi:schemaLocation="http://www.example.org/WS-HT ws-humantask.xsd">
    
    <htd:import importType="http://schemas.xmlsoap.org/wsdl/" location="ExampleTasks.wsdl" namespace="http://www.insurance.example.com/claims/"/>
    
    <htd:logicalPeopleGroups>
    
       <htd:logicalPeopleGroup name="KDON">
            <htd:documentation xml:lang="pl-PL"> Administratorzy działu obsługi należności. </htd:documentation>
            <htd:parameter name="region" type="xsd:string"/>
        </htd:logicalPeopleGroup>
        
        
        <htd:logicalPeopleGroup name="DON">
            <htd:documentation xml:lang="pl-PL"> Grupa pracowników działu obsługi należności. </htd:documentation>
        </htd:logicalPeopleGroup>
    </htd:logicalPeopleGroups>
    
    <htd:tasks>
    
        <htd:task name="Order">
            <htd:documentation xml:lang="en-US"> This task is used to handle claims that require
                manual approval. </htd:documentation>
           
            <htd:interface portType="tns:??" operation="createOrder"
                responsePortType="tns:??" responseOperation="createOrderResponse"/>
            <htd:priority> htd:getInput("CreateOrderRequest")/@issueImportance </htd:priority>
            
            <htd:peopleAssignments>
            	
            	<htd:potentialOwners>
                    <htd:from logicalPeopleGroup="DON"/>                    
                </htd:potentialOwners>
                
                <htd:businessAdministrators>
                    <htd:from logicalPeopleGroup="KDON"/>                   
                </htd:businessAdministrators>
            </htd:peopleAssignments>
            
            <htd:delegation potentialDelegatees="nobody"/>
            
            <htd:presentationElements>
                <htd:name xml:lang="en-US">Create Order</htd:name>
                <htd:name xml:lang="pl-PL">Utworzenie zlecenia</htd:name>
                <htd:presentationParameters>
                    <htd:presentationParameter name="orderNumber" type="xsd:string">
                        htd:getInput("CreateOrderRequest")/@orderNumber</htd:presentationParameter>
                    <htd:presentationParameter name="invoiceNumber" type="xsd:string">
                        htd:getInput("CreateOrderRequest")/correctiveInvoice/@invoiceNumber </htd:presentationParameter>
                    <htd:presentationParameter name="amount" type="xsd:double">
                        htd:getInput("CreateOrderRequest")/correctiveInvoice/@amount </htd:presentationParameter>
                </htd:presentationParameters>
                <htd:subject xml:lang="pl-PL">Zlecenie $orderNumber$ korekcji faktury $invoiceNumber$ na kwotę $amount$</htd:subject>
                <htd:description xml:lang="pl-PL" contentType="text/plain">Zlecenie $orderNumber$ korekcji faktury $invoiceNumber$ na kwotę $amount$</htd:description>
            </htd:presentationElements>
            
            <htd:deadlines/>            
        </htd:task>        
    </htd:tasks>
</htd:humanInteractions>
